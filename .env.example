# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mainframe_ai
DB_USER=mainframe_user
DB_PASSWORD=mainframe_pass
DB_SSL=false

# SSO Configuration
SSO_SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_EXPIRY=1d
REFRESH_TOKEN_EXPIRY=30d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/sso/google/callback

# Microsoft Azure AD
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=common
AZURE_REDIRECT_URI=http://localhost:3001/api/auth/sso/microsoft/callback

# API Configuration
API_PORT=3001
API_HOST=localhost
FRONTEND_URL=http://localhost:3000

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_COOKIE_NAME=mainframe_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_MAX_AGE=86400000

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/mainframe/app.log

# Environment
NODE_ENV=development