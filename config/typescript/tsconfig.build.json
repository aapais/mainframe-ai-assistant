{
  // Production build configuration with strict error handling
  "extends": "./tsconfig.json",

  "compilerOptions": {
    // Skip lib check to avoid node_modules type errors
    "skipLibCheck": true,

    // Build optimizations
    "removeComments": true,
    "declarationMap": false,
    "sourceMap": false,

    // Output for production
    "outDir": "./dist/build",
    "noEmit": false,

    // Suppress certain error types that don't affect runtime
    "ignoreDeprecations": "5.0"
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",

    // Exclude files with known syntax issues until they can be fixed individually
    "src/api/cache/cacheController.ts.bak",
    "tests/accessibility/**/*",
    "tests/e2e/**/*",
    "tests/integration/**/*",
    "tests/performance/**/*",
    "tests/state-management/**/*",
    "tests/typescript/**/*",
    "tests/unit/**/*",
    "tests/utils/**/*",
    "tests/ux-validation/**/*"
  ]
}