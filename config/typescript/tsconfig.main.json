{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node",
    "outDir": "../../dist/main",
    "rootDir": "../../src/main",
    "baseUrl": "../../",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@main/*": [
        "../../src/main/*"
      ],
      "@backend/*": [
        "../../src/backend/*"
      ],
      "@shared/*": [
        "../../src/shared/*"
      ],
      "@types/*": [
        "../../src/types/*"
      ],
      "@services/*": [
        "../../src/services/*"
      ],
      "@database/*": [
        "../../src/database/*"
      ],
      "@caching/*": [
        "../../src/caching/*"
      ]
    }
  },
  "include": [
    "../../src/main/**/*"
  ],
  "exclude": [
    "../../src/renderer/**/*",
    "../../src/components/**/*",
    "../../tests/**/*",
    "../../node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "extends": "../../tsconfig.json"
}