{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "../../dist/main",
    "rootDir": "../../src/main",
    "baseUrl": "../../",
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "../../src/main/**/*"
  ],
  "exclude": [
    "../../src/backend/**/*",
    "../../src/renderer/**/*",
    "../../src/components/**/*",
    "../../tests/**/*",
    "../../node_modules",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}