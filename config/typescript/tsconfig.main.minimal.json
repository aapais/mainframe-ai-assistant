{
  // Minimal TypeScript configuration for Electron Main Process
  // Designed to work around corrupted type definition files
  "compilerOptions": {
    // Basic Configuration
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",

    // Paths (relative to this config file)
    "outDir": "../../dist/main",
    "rootDir": "../../src/main",
    "baseUrl": "../../",

    // Essential Options Only
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "noEmit": false,

    // Aggressive Library Skipping
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noLib": false,

    // Minimal Type Checking to Avoid Corrupted Libraries
    "strict": false,
    "noImplicitAny": false,

    // Module Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // Isolated Modules (Required for some bundlers)
    "isolatedModules": true,

    // Don't specify lib or types arrays to avoid corrupted definitions
    "resolveJsonModule": true
  },

  "include": [
    "../../src/main/**/*.ts"
  ],

  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../src/renderer",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],

  "typeAcquisition": {
    "enable": false
  }
}