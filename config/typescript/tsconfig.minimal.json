{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "electron"]
  },
  "include": [
    "src/main/index.ts",
    "src/main/preload.ts",
    "src/main/ipc-handlers.ts",
    "src/main/menu.ts"
  ],
  "exclude": [
    "src/services/ml/**/*",
    "src/services/search/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}