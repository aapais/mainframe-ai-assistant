{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override base config for React renderer process
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [],
    "outDir": "../../dist/renderer",
    "rootDir": "../../src",
    "baseUrl": "../../",
    "typeRoots": [
      "../../node_modules/@types",
      "../../src/types"
    ],
    "noEmit": true,
    "emitDeclarationOnly": false,
    "downlevelIteration": true,
    "allowUmdGlobalAccess": false,
    "skipDefaultLibCheck": true,
    "preserveSymlinks": false,
    // Ensure proper path mapping inheritance from base config
    "paths": {
      "@/*": ["../../src/*"],
      "@renderer/*": ["../../src/renderer/*"],
      "@components/*": ["../../src/renderer/components/*"],
      "@hooks/*": ["../../src/renderer/hooks/*"],
      "@shared/*": ["../../src/shared/*"],
      "@types/*": ["../../src/types/*"],
      "@utils/*": ["../../src/shared/utils/*"]
    }
  },
  "include": [
    "../../src/renderer/**/*",
    "../../src/components/**/*",
    "../../src/hooks/**/*",
    "../../src/shared/**/*",
    "../../src/types/**/*"
  ],
  "exclude": [
    "../../src/main/**/*",
    "../../tests/**/*",
    "../../node_modules"
  ]
}