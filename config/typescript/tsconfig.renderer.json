{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "react",
      "react-dom",
      "node",
      "electron"
    ],
    "outDir": "../../dist/renderer",
    "rootDir": "../../src",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "downlevelIteration": true,
    "allowUmdGlobalAccess": false,
    "skipDefaultLibCheck": true,
    "preserveSymlinks": false
  },
  "include": [
    "../../src/renderer/**/*",
    "../../src/components/**/*",
    "../../src/hooks/**/*",
    "../../src/shared/**/*",
    "../../src/types/**/*"
  ],
  "exclude": [
    "../../src/main/**/*",
    "../../tests/**/*",
    "../../node_modules"
  ]
}