{
  // TypeScript configuration for Development
  // Optimized for fast compilation and debugging
  "extends": "./tsconfig.json",
  
  "compilerOptions": {
    // Development optimizations
    "incremental": true,                          // Enable incremental compilation
    "tsBuildInfoFile": "./.tsbuildinfo",          // Store build info for faster rebuilds
    
    // Relaxed checks for development speed
    "noUnusedLocals": false,                      // Allow unused locals during dev
    "noUnusedParameters": false,                  // Allow unused params during dev
    "noImplicitReturns": false,                   // Allow implicit returns during dev
    
    // Enhanced debugging
    "sourceMap": true,                            // Full source maps
    "inlineSourceMap": false,                     // External source maps
    "inlineSources": true,                        // Include source code in maps
    "declarationMap": true,                       // Declaration source maps
    
    // Keep comments for debugging
    "removeComments": false,                      // Keep comments for clarity
    "preserveConstEnums": true,                   // Keep const enums for debugging
    
    // Emit settings for development
    "noEmit": false,                              // Emit files in development
    "noEmitOnError": false,                       // Emit even with errors
    
    // Watch mode optimizations
    "assumeChangesOnlyAffectDirectDependencies": true,  // Faster watch mode
    
    // Development-friendly module resolution
    "moduleResolution": "bundler",                // Vite/Webpack bundler mode
    "allowImportingTsExtensions": false,          // Standard imports only
    
    // Performance settings
    "skipLibCheck": true,                         // Skip .d.ts checking for speed
    "skipDefaultLibCheck": true                   // Skip default lib checking
  },
  
  "watchOptions": {
    "watchFile": "priorityPollingInterval",       // Fast file watching
    "watchDirectory": "dynamicPriorityPolling",   // Smart directory watching
    "fallbackPolling": "dynamicPriority",         // Fallback strategy
    "synchronousWatchDirectory": true,            // Sync directory watching
    
    "excludeDirectories": [
      "**/node_modules",
      "**/dist",
      "**/build",
      "**/.git"
    ],
    
    "excludeFiles": [
      "**/*.log",
      "**/*.sqlite",
      "**/*.db"
    ]
  },
  
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.prod.ts",                               // Exclude production files
    "**/*.min.js"
  ]
}