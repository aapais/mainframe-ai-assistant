#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Check if there are any staged files
if git diff --cached --quiet; then
  echo "⚠️  No staged files found. Skipping pre-commit checks."
  exit 0
fi

# First, run auto-fix script to correct all known issues
echo "🔧 Running automatic error fixes..."
node scripts/fix-all-errors.js

# Re-stage fixed files
git add -A

# Run lint-staged (includes ESLint, Prettier, and TypeScript checks)
echo "📝 Running linters on staged files..."
npx lint-staged

# Check if lint-staged passed
if [ $? -ne 0 ]; then
  echo "⚠️  Linting had issues. Attempting automatic fix..."

  # Try to auto-fix with our scripts
  npm run fix 2>/dev/null || true

  # Re-stage fixed files
  git add -A

  # Try lint-staged again
  npx lint-staged

  if [ $? -ne 0 ]; then
    echo "❌ Linting failed after auto-fix. Please fix remaining issues manually."
    exit 1
  fi
fi

# Run TypeScript type checking on the entire project
echo "🔍 Running TypeScript type checking..."
npm run typecheck 2>/dev/null

if [ $? -ne 0 ]; then
  echo "⚠️  TypeScript type checking skipped (no typecheck script found)."
fi

# Run security audit (non-blocking, just warn)
echo "🔒 Running npm security audit..."
npm audit --audit-level=high --dry-run 2>/dev/null

if [ $? -ne 0 ]; then
  echo "⚠️  Security vulnerabilities found. Consider running 'npm audit fix'."
  echo "⚠️  This is a warning only - commit will continue."
fi

# Run a quick test to ensure nothing is broken
echo "🧪 Running quick tests..."
npm run test -- --passWithNoTests --bail --findRelatedTests $(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx)$' | tr '\n' ' ') 2>/dev/null

if [ $? -ne 0 ]; then
  echo "⚠️  Tests skipped or no tests found."
fi

echo "✅ All pre-commit checks passed!"
exit 0\n