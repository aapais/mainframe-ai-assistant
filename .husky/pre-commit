#!/usr/bin/env sh\n. \"$(dirname -- \"$0\")/_/husky.sh\"\n\necho \"ğŸ” Running pre-commit checks...\"\n\n# Check if there are any staged files\nif git diff --cached --quiet; then\n  echo \"âš ï¸  No staged files found. Skipping pre-commit checks.\"\n  exit 0\nfi\n\n# Run lint-staged (includes ESLint, Prettier, and TypeScript checks)\necho \"ğŸ“ Running linters on staged files...\"\nnpx lint-staged\n\n# Check if lint-staged passed\nif [ $? -ne 0 ]; then\n  echo \"âŒ Linting failed. Please fix the issues above.\"\n  exit 1\nfi\n\n# Run TypeScript type checking on the entire project\necho \"ğŸ” Running TypeScript type checking...\"\nnpm run typecheck\n\nif [ $? -ne 0 ]; then\n  echo \"âŒ TypeScript type checking failed. Please fix the type errors.\"\n  exit 1\nfi\n\n# Run security audit (non-blocking, just warn)\necho \"ğŸ”’ Running npm security audit...\"\nnpm audit --audit-level=high --dry-run\n\nif [ $? -ne 0 ]; then\n  echo \"âš ï¸  Security vulnerabilities found. Consider running 'npm audit fix'.\"\n  echo \"âš ï¸  This is a warning only - commit will continue.\"\nfi\n\n# Run a quick test to ensure nothing is broken\necho \"ğŸ§ª Running quick tests...\"\nnpm run test -- --passWithNoTests --bail --findRelatedTests $(git diff --cached --name-only --diff-filter=ACM | grep -E '\\.(js|jsx|ts|tsx)$' | tr '\\n' ' ')\n\nif [ $? -ne 0 ]; then\n  echo \"âŒ Tests failed. Please fix the failing tests.\"\n  exit 1\nfi\n\necho \"âœ… All pre-commit checks passed!\"\nexit 0\n