# Vite Development Environment Configuration

# Application Environment
NODE_ENV=development
VITE_NODE_ENV=development

# Development Server Configuration
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost

# Application Information
VITE_APP_NAME="Accenture Mainframe AI Assistant"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Enterprise Knowledge Management & AI-Powered Search"

# Feature Flags
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCEMAPS=true
VITE_ENABLE_REACT_STRICT_MODE=true

# Performance Configuration
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# Development Debugging
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# Electron Integration
VITE_ELECTRON_INTEGRATION=true
VITE_ENABLE_ELECTRON_MOCK=true