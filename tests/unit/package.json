{
  "name": "incident-resolution-unit-tests",
  "version": "1.0.0",
  "description": "Comprehensive unit testing suite for AI Incident Resolution System",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:services": "jest tests/services",
    "test:models": "jest tests/models",
    "test:utils": "jest tests/utils"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0",
    "node-mocks-http": "^1.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,py}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}