# Playwright Electron Testing Environment Configuration
# These variables are loaded during test execution

# Application Configuration
NODE_ENV=test
ELECTRON_DISABLE_GPU=1
ELECTRON_DISABLE_SECURITY_WARNINGS=1
ELECTRON_ENABLE_REMOTE_MODULE=0

# Test Database Configuration
TEST_DATABASE_PATH=tests/playwright/temp/test.db
TEST_DATABASE_BACKUP_PATH=tests/playwright/temp/test-backup.db

# Test Data Paths
TEST_DATA_PATH=tests/playwright/test-data
TEST_FIXTURES_PATH=tests/playwright/fixtures
TEST_TEMP_PATH=tests/playwright/temp

# Browser Configuration
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_SLOW_MO=100
PLAYWRIGHT_TIMEOUT=120000
PLAYWRIGHT_EXPECT_TIMEOUT=15000

# Viewport Configuration
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Performance Testing
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_THRESHOLD_STARTUP=5000
PERFORMANCE_THRESHOLD_MEMORY=500000000
PERFORMANCE_THRESHOLD_TEST_DURATION=10000

# Visual Testing
VISUAL_THRESHOLD=0.001
VISUAL_ANIMATIONS=disabled
VISUAL_CARET=hide

# Accessibility Testing
A11Y_ENABLED=true
A11Y_AXECORE_VERSION=latest

# CI Configuration
CI_WORKERS=1
CI_RETRIES=2
CI_HEADLESS=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_CONSOLE_CAPTURE=true
ENABLE_ERROR_CAPTURE=true

# Feature Flags for Testing
ENABLE_EXPERIMENTAL_FEATURES=false
MOCK_EXTERNAL_APIS=true
SKIP_SLOW_TESTS=false

# Network Testing
NETWORK_DELAY_MS=0
SIMULATE_OFFLINE=false

# Screenshot Configuration
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_FULL_PAGE=true
SCREENSHOT_PATH=tests/playwright/screenshots

# Video Recording
VIDEO_ON_FAILURE=true
VIDEO_SIZE_WIDTH=1920
VIDEO_SIZE_HEIGHT=1080

# Trace Configuration
TRACE_ON_FAILURE=true
TRACE_INCLUDE_SOURCES=true
TRACE_INCLUDE_SCREENSHOTS=true
TRACE_INCLUDE_SNAPSHOTS=true

# Reporting Configuration
ENABLE_HTML_REPORT=true
ENABLE_JSON_REPORT=true
ENABLE_JUNIT_REPORT=true
ENABLE_CUSTOM_ELECTRON_REPORT=true

# Test Execution Configuration
MAX_PARALLEL_WORKERS=2
TEST_TIMEOUT_SCALE=1.0
ENABLE_TEST_RETRY=true

# Electron App Configuration
ELECTRON_APP_PATH=dist/main/index.js
ELECTRON_PRELOAD_PATH=dist/preload/index.js
ELECTRON_RENDERER_PORT=3000

# Development Configuration
DEV_TOOLS_OPEN=false
PRESERVE_CONSOLE_LOGS=true
ENABLE_DEBUG_MODE=false