{\n  \"name\": \"incident-management-tests\",\n  \"version\": \"1.0.0\",\n  \"description\": \"Comprehensive test suite for incident management implementation\",\n  \"private\": true,\n  \"scripts\": {\n    \"test\": \"jest --config jest.config.js\",\n    \"test:unit\": \"jest --config jest.config.js --testPathPattern=unit\",\n    \"test:integration\": \"jest --config jest.config.js --testPathPattern=integration\",\n    \"test:performance\": \"jest --config jest.config.js --testPathPattern=performance --maxWorkers=1\",\n    \"test:acceptance\": \"jest --config jest.config.js --testPathPattern=user-acceptance\",\n    \"test:e2e\": \"playwright test --config playwright.config.ts\",\n    \"test:e2e:headed\": \"playwright test --config playwright.config.ts --headed\",\n    \"test:e2e:debug\": \"playwright test --config playwright.config.ts --debug\",\n    \"test:all\": \"npm run test && npm run test:e2e\",\n    \"test:watch\": \"jest --config jest.config.js --watch\",\n    \"test:coverage\": \"jest --config jest.config.js --coverage\",\n    \"test:ci\": \"jest --config jest.config.js --ci --coverage --watchAll=false\",\n    \"playwright:install\": \"playwright install\",\n    \"playwright:install-deps\": \"playwright install-deps\",\n    \"report:open\": \"open coverage/incident-management/html-report/index.html\",\n    \"report:e2e\": \"playwright show-report coverage/incident-management/playwright-report\",\n    \"clean\": \"rimraf coverage temp\",\n    \"clean:all\": \"npm run clean && rimraf node_modules\",\n    \"setup\": \"npm run playwright:install\",\n    \"lint:tests\": \"eslint . --ext .ts,.tsx\",\n    \"type-check\": \"tsc --noEmit\"\n  },\n  \"dependencies\": {\n    \"@testing-library/jest-dom\": \"^6.1.4\",\n    \"@testing-library/react\": \"^13.4.0\",\n    \"@testing-library/user-event\": \"^14.5.1\",\n    \"@playwright/test\": \"^1.40.0\",\n    \"jest\": \"^29.7.0\",\n    \"jest-environment-jsdom\": \"^29.7.0\",\n    \"ts-jest\": \"^29.1.1\"\n  },\n  \"devDependencies\": {\n    \"@types/jest\": \"^29.5.8\",\n    \"@types/node\": \"^20.9.0\",\n    \"jest-html-reporters\": \"^3.1.5\",\n    \"jest-junit\": \"^16.0.0\",\n    \"rimraf\": \"^5.0.5\",\n    \"typescript\": \"^5.2.2\"\n  },\n  \"jest\": {\n    \"preset\": \"ts-jest\",\n    \"testEnvironment\": \"jsdom\",\n    \"setupFilesAfterEnv\": [\n      \"<rootDir>/setup.ts\"\n    ]\n  },\n  \"keywords\": [\n    \"incident-management\",\n    \"testing\",\n    \"jest\",\n    \"playwright\",\n    \"e2e\",\n    \"unit-tests\",\n    \"integration-tests\",\n    \"performance-tests\",\n    \"user-acceptance-tests\"\n  ],\n  \"author\": \"Accenture Development Team\",\n  \"license\": \"UNLICENSED\",\n  \"engines\": {\n    \"node\": \">=18.0.0\",\n    \"npm\": \">=8.0.0\"\n  },\n  \"repository\": {\n    \"type\": \"git\",\n    \"url\": \"git+https://github.com/accenture/mainframe-ai-assistant.git\",\n    \"directory\": \"tests/incident-management\"\n  },\n  \"bugs\": {\n    \"url\": \"https://github.com/accenture/mainframe-ai-assistant/issues\"\n  },\n  \"homepage\": \"https://github.com/accenture/mainframe-ai-assistant#readme\"\n}";