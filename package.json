{
  "name": "accenture-mainframe-ai-assistant",
  "version": "2.0.0",
  "description": "Accenture Mainframe AI Assistant - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "start:backend": "python3 scripts/real-db-server.py",
    "start:frontend": "python3 scripts/integrated-server.py",
    "clean": "rm -rf dist app/node_modules app/.next"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^27.0.0",
    "@types/react": "^19.1.13",
    "electron-builder": "^24.6.4",
    "lint-staged": "^16.2.0",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.accenture.mainframe.assistant",
    "productName": "Accenture Mainframe AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "Accenture-Mainframe-AI-Assistant-Integrated.html",
      "scripts/**/*",
      "kb-assistant.db",
      "assets/**/*"
    ],
    "extraResources": [
      "kb-assistant.db"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "author": "Accenture",
  "license": "MIT"
}