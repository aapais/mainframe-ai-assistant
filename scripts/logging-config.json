{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "%(asctime)s [%(levelname)s] %(name)s:%(lineno)d - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "simple": {
      "format": "%(levelname)s - %(message)s"
    },
    "json": {
      "()": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s %(name)s %(levelname)s %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "./logs/ai-system.log",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "error_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "detailed",
      "filename": "./logs/ai-system-errors.log",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "audit_file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "./logs/audit.log",
      "when": "midnight",
      "interval": 1,
      "backupCount": 30
    }
  },
  "loggers": {
    "ai_incident_system": {
      "level": "DEBUG",
      "handlers": ["console", "file", "error_file"],
      "propagate": false
    },
    "ai_incident_system.audit": {
      "level": "INFO",
      "handlers": ["audit_file"],
      "propagate": false
    },
    "ai_incident_system.security": {
      "level": "WARNING",
      "handlers": ["console", "error_file", "audit_file"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "file"]
  }
}