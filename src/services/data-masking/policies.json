        "maskChar": "*",
        "reversible": false
      },
      "fullName": {
        "type": "partial",
        "showFirst": 1,
        "showLast": 1,
        "maskChar": "*",
        "reversible": false
      },
      "email": {
        "type": "partial",
        "showFirst": 3,
        "showLast": 0,
        "maskChar": "*",
        "reversible": false
      },
      "mobilePhone": {
        "type": "partial",
        "showFirst": 5,
        "showLast": 4,
        "maskChar": "*",
        "reversible": false
      },
      "monetaryAmount": {
        "type": "partial",
        "showFirst": 2,
        "showLast": 2,
        "maskChar": "X",
        "reversible": false
      }
    }
  },

