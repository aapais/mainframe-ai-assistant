{
  "strict": {
    "name": "Strict Security Policy",
    "description": "Maximum security for critical banking operations",
    "level": "critical",
    "defaultStrategy": {
      "type": "redaction",
      "reversible": false,
      "replacement": "[CLASSIFIED]"
    },
    "strategies": {
      "cpf": {
        "type": "hashing",
        "algorithm": "sha256",
        "prefix": "CPF",
        "length": 8,
        "reversible": false
      },
      "cnpj": {
        "type": "hashing",
        "algorithm": "sha256",
        "prefix": "CNPJ",
        "length": 8,
        "reversible": false
      },
      "creditCard": {
        "type": "redaction",
        "replacement": "[CARTAO-PROTEGIDO]",
        "reversible": false
      },
      "cvv": {
        "type": "redaction",
        "replacement": "***",
        "reversible": false
      },
      "bankAccount": {
        "type": "hashing",
        "algorithm": "sha256",
        "prefix": "CONTA",
        "length": 6,
        "reversible": false
      },
      "password": {
        "type": "redaction",
        "replacement": "[SENHA-PROTEGIDA]",
        "reversible": false
      },
      "apiKey": {
        "type": "redaction",
        "replacement": "[API-KEY-PROTEGIDA]",
        "reversible": false
      },
      "pixKey": {
        "type": "hashing",
        "algorithm": "sha256",
        "prefix": "PIX",
        "length": 8,
        "reversible": false
      },
      "fullName": {
        "type": "substitution",
        "reversible": false
      },
      "email": {
        "type": "partial",
        "showFirst": 2,
        "showLast": 0,
        "maskChar": "*",
        "reversible": false
      },
      "mobilePhone": {
        "type": "partial",
        "showFirst": 4,
        "showLast": 2,
        "maskChar": "*",
        "reversible": false
      },
      "address": {
        "type": "substitution",
        "reversible": false
      },
      "monetaryAmount": {
        "type": "substitution",
        "reversible": false
      },
      "ssn": {
        "type": "redaction",
        "replacement": "[SSN-PROTEGIDO]",
        "reversible": false
      },
      "connectionString": {
        "type": "redaction",
        "replacement": "[CONNECTION-PROTEGIDA]",
        "reversible": false
      },
      "sensitiveUrl": {
        "type": "redaction",
        "replacement": "[URL-PROTEGIDA]",
        "reversible": false
      }
    }
  },

  "balanced": {
