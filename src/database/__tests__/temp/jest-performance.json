{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/performance/**/*.test.ts"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/test-utils/setup.ts"
  ],
  "maxWorkers": 1,
  "testTimeout": 300000,
  "verbose": false,
  "collectCoverage": true,
  "coverageDirectory": "/mnt/c/mainframe-ai-assistant/coverage/database",
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "cobertura"
  ],
  "forceExit": true,
  "detectOpenHandles": true
}